{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current target",
            "args": [],
            "type": "shell",
            "command": "${workspaceRoot}/build.py -d",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "tag current target",
            "args": [],
            "type": "shell",
            "command": "${workspaceRoot}/build.py -l",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "clean build current target",
            "args": [],
            "type": "shell",
            "command": "${workspaceRoot}/build.py -d -c",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "group": "build"
        }
    ]
}
